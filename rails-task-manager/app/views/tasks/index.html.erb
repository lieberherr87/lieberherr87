<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= link_to "New task", new_task_path %>

<% @tasks.each do |task| %>
  <h3><%= task.name %></h3>
  <p><%= task.date %></p>
  <p><%= task.status %></p>
  <p><%= link_to "Details", task_path(task) %>
  <p><%= link_to "Update", edit_task_path(task) %>
  <p><%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>

<% end %>
